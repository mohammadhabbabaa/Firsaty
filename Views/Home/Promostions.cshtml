@model IEnumerable<firsaty.Models.Promotion>


@{ Layout = null;}


<div class="homepage-banner spc2">
    <div class="container container-240">
        <div class="row">
          

            @foreach (var item in Model)
            {


                <div class="col-md-4 col-sm-4 col-xs-4">
                    <div class="banner-img effect-img3 plus-zoom">
                        <a href="@item.URL" class=""><img src="https://admin.firsaty.com/@item.Image" alt="" class="img-responsive"></a>
                    </div>
                </div>


            }


        </div>
    </div>
</div>



